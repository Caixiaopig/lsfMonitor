#!/bin/bash

# Get the real tool path.
if [ -e $0 ]; then
    if [ -L $0 ]; then
        tool_dir=`readlink -f $0 | sed 's/\/[^\/]*$//g'`
    else
        tool_dir=`echo $0 | sed 's/\/[^\/]*$//g'`
    fi
else
    echo "*Error*: $0: directory not exists!"
    exit 1
fi

# Set environment variables.
source ${tool_dir}/.env.bash $tool_dir

# Execute with bsample.py
bsample_tool="${tool_dir}/bsample.py"

if [ -e $bsample_tool ]; then
    python3 $bsample_tool $@
else
    echo "*Error*: $bsample_tool: script not exists!"
    exit 1
fi
